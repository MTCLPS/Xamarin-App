<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTC.LPS.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="Default_button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Aqua"/>
            </Style>
            <Style TargetType="Entry" x:Key="Default_entry">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>
            
        </ResourceDictionary>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="Icons">
                <On Platform="Android" Value="segmdl.ttf#Segoe MDL2 Assets"/>
                <On Platform="UWP" Value="Segoe MDL2 Assets"/>
                <On Platform="iOS" Value="segmdl"/>
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>